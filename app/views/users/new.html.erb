<h1>Sign Up to MyMeals</h1>

<%= render partial: 'layouts/error', locals: {object: @user}  %>

<%= form_for(@user, url: signup_path) do |f| %>

<%= f.label :email %>
<%= f.text_field :email %><br><br>

<%= f.label :password %>
<%= f.password_field :password %><br><br>

<%= f.label :first_name %>
<%= f.text_field :first_name %><br><br>

<%= f.label :last_name %>
<%= f.text_field :last_name %><br><br>

<%= f.submit "Sign Up" %>

<% end %>