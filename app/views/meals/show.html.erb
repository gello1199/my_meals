<%= link_to "<-- Back to Restaurant", restaurant_path(@restaurant) %> <br>

<h1>Meals</h1>

<div class="meals">
    Name: <%= @meal.name %><br><br>
    Description: <%= @meal.description %><br><br>
</div>

<% if @meal.user == current_user %>

<%= link_to "Edit Meal", edit_restaurant_meal_path(@restaurant, @meal) %><br><br>

<%= link_to "Delete Meal", restaurant_meal_path(@restaurant, @meal), method: 'delete' %> <br><br>
<% end %>



