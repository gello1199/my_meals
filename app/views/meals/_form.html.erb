<%= render partial: 'layouts/error', locals: {object: @meal}  %>

<%= form_for ([@restaurant, @meal]) do |f| %>
<%= f.hidden_field :restaurant_id, value: @restaurant.id %>
<%= f.label :name %>
<%= f.text_field :name %><br><br>
<%= f.label :description %>
<%= f.text_field :description %><br><br>
<%= f.submit %>
<% end %>