<h1>Create a New Restaurant</h1>


<%= form_for @restaurant do |f| %>
<%= render partial: 'form', locals: {f: f} %>

<h3> Add a New Meal </h3>
<%= f.fields_for :meals do |m| %>
<%= m.label :name %>
<%= m.text_field :name %><br><br>
<%= m.label :description %>
<%= m.text_field :description %><br><br>
<% end %>

<%= f.submit "Create" %>
<% end %>