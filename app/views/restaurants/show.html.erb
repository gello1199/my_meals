<h1> <%= @restaurant.name %> </h1>

<h2>Location: <%= @restaurant.location.name %> </h2>

<% @restaurant.reviews.each do |r| %>
<h3>Review: <%= r.title %></h3>
<h4>Comment: <%= r.comment %> </h4>
<h3>Rating: <%= r.rating %> </h3>

<% @restaurant.meals.each do |m| %>
<h3>MyMeals ;) </h3>
<ul>
<li> <%= link_to m.name, restaurant_meal_path(@restaurant, m) %> </li>
</ul>
<% end %>

<%= link_to "Edit Restaurant", edit_restaurant_path %><br><br>

<%= link_to "Create a new Meal", new_restaurant_meal_path(@restaurant) %>
<% end %>